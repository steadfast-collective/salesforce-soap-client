{
    "name": "php-arsenal/salesforce-soap-client",
    "type": "library",
    "description": "A client for the Salesforce SOAP API",
    "keywords": [
        "salesforce",
        "crm",
        "soap",
        "force.com",
        "web services"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpArsenal\\SoapClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpArsenal\\SoapClient\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "psr/log": "^1.1",
        "symfony/event-dispatcher": "^5.2"
    },
    "require-dev": {
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c phpunit.xml.dist --no-coverage"
    },
    "config": {
        "sort-packages": true
    }
}
